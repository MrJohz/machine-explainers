block variables
    - let pageName = "";

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title
            = pageName ? `${pageName} — ` : ''
            | Old Machines
    body
        header
            h1 
                = pageName ? `${pageName} — ` : ''
                | Old Machines

        article
            block contents
